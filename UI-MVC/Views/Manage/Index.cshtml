@model BB.UI.Web.MVC.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
    ViewBag.Id = ViewBag.user.Id;
}


@using (Html.BeginForm("Save", "Manage", new { userId = ViewBag.user.Id }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
{
<p class="text-success">@ViewBag.StatusMessage</p>
    <div class="title more-margin-top">
        <h1>Manage </h1> your account
    </div>
    <div>
        <div class="col-md-6">
            <h3>Change your avatar</h3>
            <input type="file" id="profileImage" name="profileImage" style="display: none"/>
            <div>
                <div class="div-image-form">
                  
                    @if (ViewBag.user.ImageUrl != null)
                    {
                        <img class="borderround image-form" id="profile_click" src="~/Content/img/Users/@ViewBag.user.ImageUrl"/>
                    }
                    else
                    {
                        <img class="borderround image-form" id="profile_click" src="~/Content/img/avatar.png"/>
                    }
                </div>
            </div>
            <div class="more-margin-top">
                <input type="submit" value="Save changes" class="btn btn-default create"/>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Password</h3>
            <div class="button btn-default create">
                @if (Model.HasPassword)
                {
                    <a href="@Url.Action("ChangePassword")">
                        <input type="button" class="btn btn-default create" value="Change your password"/>
                    </a>
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }

            </div>
        </div>
    </div>
    <div class="row"></div>

}
@section scripts{
@Scripts.Render("~/Scripts/profilepicture.js")
}