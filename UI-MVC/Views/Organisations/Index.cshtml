@using BB.UI.Web.MVC.Models
@model IEnumerable<BB.UI.Web.MVC.Models.OrganisationViewModel>
<link rel="stylesheet" type="text/css" href="~/Content/modal.css">

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title">
    <h1>My Organisations</h1>|
    @if (!@Model.Any())
    {
        <text> No Organisations </text>
    }
</div>

<h2>Index</h2>
<a class="btn" href="#myModal">create new organisation</a>
    <div id="myModal" class="modal" style="margin-top: -90px" >
        <div class="modal-content" style="width: 620px; height: 530px">
            <a href="#close" title="Close" class="close">X</a>
            <div class="modal-body" style="margin-left: 60px; width: 100%">
                @Html.Partial("Create", new OrganisationViewModel())
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorScheme)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BannerUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorScheme)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
                </td>
            </tr>
        }
    </table>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

