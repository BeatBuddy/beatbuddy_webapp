        <img class="round" src="~/Content/img/lennart.jpg"/>
        Lennart Boeckx
    </div>
</div>

@section scripts{
    <script>
        $('#explore').click(function() {
            $('html, body').animate({ scrollTop: $('#intro').offset().top - 50 }, 'slow');
        });
    </script>
}