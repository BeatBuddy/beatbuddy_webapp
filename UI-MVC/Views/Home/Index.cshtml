    <div class="about-user">
        <img class="round" src="~/Content/img/ignace.jpg"/>
        Ignace Maes
    </div>
    <div class="about-user">
        <img class="round" src="~/Content/img/maarten.jpg"/>
        Maarten Van Giel
    </div>
