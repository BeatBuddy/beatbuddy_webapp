<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BeatBuddy</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,500,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @if (IsSectionDefined("PortalPageStyle"))
    {
        @RenderSection("PortalPageStyle", required: false)
    }
</head>
<body>
    <header>
        <a href="@(Request.IsAuthenticated ? Url.Action("Portal", "Home") : Url.Action("Index", "Home"))"><img src="~/Content/img/logo_header.png" alt="BeatBuddy logo" /></a>
        <ul class="nav">
            <li>@Html.Partial("_LoginPartial")</li>
        </ul>
    </header>

    @RenderSection("escape_padding", required: false)

    <div class="body-content">
        @RenderBody()
    </div>
    <div class="clearfix"></div>

    @if (ViewBag.NoFooter == null)
    {
        <footer>
            Copyright &copy; @DateTime.Today.Year
        </footer>
    }

@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)
</body>
</html>